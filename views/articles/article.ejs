    <!--========================================================ARTICLE===================================================-->
    <%- include('../layouts/main'); -%>
    <%- include ('../partials/navbar'); -%>
    
    <section class="article-page" id="article-page">
        <div class="container">
            
            <div class="row"> 
                <div class="col-md">
                    <h1><%= post.title %></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <img src="<%= post.image %>" class="rounded mx-auto d-block img-fluid img-thumbnail" alt="Responsive image">
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <article><%= post.content %></article>
                </div>
            </div>
           <div class="row">
               <div class="col-md-6">
                  <p></p> 
                </div>
                <div class="col-md-6">
                    <a href="<%= post.link %>"><button class="btn btn-success">site internet</button></a>
                </div>
           </div>
           
        </div>
    </section>
    <%- include ('../partials/footer') -%>